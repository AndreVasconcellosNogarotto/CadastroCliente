@page
@model CadastroCliente.Pages.clientes.IndexModel
@{
}

<br>
<h2>Lista de Clientes</h2>
<a class='btn btn-primary btn-sm' href='/Clientes/Create'>Novo Cliente</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Adress</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>


    </thead>
    <tbody>
        @foreach(var item in Model.listClientes)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.adress</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Clientes/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Clientes/Delete?id=@item.id">Delete</a>

                </td>
                



            </tr>
        }

    </tbody>




</table>
